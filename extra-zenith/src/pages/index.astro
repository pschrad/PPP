---
import Layout from "../layouts/Layout.astro";
import HeroCard from "../components/HeroCard.astro";
import SkillCard from "../components/SkillCard.astro";
import TimelineItem from "../components/TimelineItem.astro";
import WorkCard from "../components/WorkCard.astro";

const stats = [
	{ value: "8+", label: "Years" },
	{ value: "40+", label: "Projects" },
	{ value: "3", label: "Teams" },
	{ value: "NYC", label: "Based" },
];

const workItems = [
	{
		title: "Flux Finance",
		description: "Landing page refresh that lifted demo signups by 28%.",
		chips: ["UX", "UI", "Astro"],
	},
	{
		title: "Orbit Health",
		description: "Patient portal redesign with a calmer, human-first approach.",
		chips: ["Design", "Brand"],
	},
	{
		title: "Studio North",
		description: "Portfolio and CMS build for a small creative studio.",
		chips: ["Build", "CMS"],
	},
];

const timelineItems = [
	{
		date: "2023–Now",
		title: "Senior Product Designer · Lumina",
		description: "Led design system and conversion-focused marketing site rebuild.",
	},
	{
		date: "2020–2023",
		title: "UI Engineer · Studio Arc",
		description: "Built brand sites and interactive product launches.",
	},
	{
		date: "2017–2020",
		title: "Designer · Freelance",
		description: "Partnered with founders on MVPs and portfolio sites.",
	},
];

const skills = [
	{
		title: "Design",
		description: "Systems, prototyping, user flows, typography.",
	},
	{
		title: "Build",
		description: "Astro, React, HTML/CSS, component libraries.",
	},
	{
		title: "Motion",
		description: "Framer Motion, Lottie, scroll storytelling.",
	},
];
---

<Layout>
	<main class="profile">
		<section class="hero">
			<div class="hero__copy">
				<p class="eyebrow">Product Designer · Frontend Builder</p>
				<h1>Phyona — crafting friendly, high‑performing web experiences.</h1>
				<p class="lede">
					I design and build digital products with a focus on clarity, motion, and
					conversion. Currently open to freelance and full‑time opportunities.
				</p>
				<div class="cta">
					<a class="btn btn--primary" href="/page1">View Work</a>
					<a class="btn btn--ghost" href="/page2">Download Resume</a>
				</div>
			</div>
			<HeroCard
				statusLabel="Currently"
				availabilityLabel="Available"
				title="Building bold, simple interfaces."
				stats={stats}
			/>
		</section>

		<section class="band">
			<div class="band__item">
				<h2>Snapshot</h2>
				<p>
					I translate business goals into clean UI systems. Strong in Figma,
					Astro, React, and motion-driven storytelling.
				</p>
			</div>
			<div class="band__item">
				<h2>Focus</h2>
				<ul class="tags">
					<li>Design Systems</li>
					<li>Prototyping</li>
					<li>Web Perf</li>
					<li>Brand Sites</li>
				</ul>
			</div>
			<div class="band__item">
				<h2>Toolbox</h2>
				<ul class="tags">
					<li>Figma</li>
					<li>Astro</li>
					<li>React</li>
					<li>Framer Motion</li>
				</ul>
			</div>
		</section>

		<section class="section">
			<header class="section__head">
				<h2>Selected Work</h2>
				<a class="link" href="/page1">View all</a>
			</header>
			<div class="grid">
				{workItems.map((item) => (
					<WorkCard {...item} />
				))}
			</div>
		</section>

		<section class="section">
			<header class="section__head">
				<h2>Experience</h2>
				<a class="link" href="/page3">Full timeline</a>
			</header>
			<div class="timeline">
				{timelineItems.map((item) => (
					<TimelineItem {...item} />
				))}
			</div>
		</section>

		<section class="section">
			<header class="section__head">
				<h2>Skills</h2>
			</header>
			<div class="skill-grid">
				{skills.map((item) => (
					<SkillCard {...item} />
				))}
			</div>
		</section>

		<section class="cta-band">
			<div>
				<h2>Let’s build something calm, clear, and memorable.</h2>
				<p>Have a project in mind? I’m available for new work.</p>
			</div>
			<a class="btn btn--primary" href="/page2">Get in touch</a>
		</section>
	</main>
</Layout>

<style>
	@import url("https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Space+Grotesk:wght@400;500;600&display=swap");

	:global(html) {
		background: #0f0f10;
	}

	:global(body) {
		margin: 0;
		color: #151515;
		background: radial-gradient(circle at 20% 10%, #ffe8d1 0%, #fff7f0 35%, #f3f6ff 70%, #ffffff 100%);
		font-family: "Space Grotesk", "Segoe UI", sans-serif;
	}

	:global(main) {
		min-height: 100vh;
	}

	.profile {
		max-width: 1100px;
		margin: 0 auto;
		padding: 32px 24px 96px;
		display: flex;
		flex-direction: column;
		gap: 64px;
	}

	.hero {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 32px;
		align-items: center;
	}

	.hero h1 {
		font-family: "DM Serif Display", "Georgia", serif;
		font-size: clamp(2.4rem, 4vw, 3.6rem);
		margin: 8px 0 16px;
	}

	.eyebrow {
		text-transform: uppercase;
		letter-spacing: 0.12em;
		font-size: 0.78rem;
		color: #6b7280;
	}

	.lede {
		font-size: 1.05rem;
		max-width: 46ch;
	}

	.cta {
		display: flex;
		gap: 16px;
		margin-top: 24px;
		flex-wrap: wrap;
	}

	.btn {
		padding: 12px 20px;
		border-radius: 999px;
		border: 1px solid #1d1d1f;
		text-decoration: none;
		font-weight: 600;
		color: #1d1d1f;
	}

	.btn--primary {
		background: #1d1d1f;
		color: #ffffff;
	}

	.btn--ghost {
		background: transparent;
	}

	.hero__card {
	}

	.band {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 24px;
		background: #ffffff;
		border-radius: 20px;
		padding: 28px;
		box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
	}

	.band h2 {
		margin-top: 0;
	}

	.tags {
		list-style: none;
		padding: 0;
		margin: 12px 0 0;
		display: flex;
		gap: 8px;
		flex-wrap: wrap;
	}

	.tags li {
		padding: 6px 12px;
		border-radius: 999px;
		background: #f2f4f8;
		font-size: 0.85rem;
	}

	.section__head {
		display: flex;
		align-items: baseline;
		justify-content: space-between;
		gap: 16px;
		margin-bottom: 20px;
	}

	.link {
		color: #1d1d1f;
		text-decoration: none;
		font-weight: 600;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 20px;
	}

	.timeline {
		display: grid;
		gap: 16px;
	}

	.skill-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 16px;
	}

	.cta-band {
		display: flex;
		justify-content: space-between;
		gap: 24px;
		align-items: center;
		background: #111318;
		color: #ffffff;
		padding: 28px;
		border-radius: 20px;
		flex-wrap: wrap;
	}

	@media (max-width: 720px) {
		.section__head {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
