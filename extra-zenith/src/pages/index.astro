---
import Layout from "../layouts/Layout.astro";
import HeroCard from "../components/HeroCard.astro";
import SkillCard from "../components/SkillCard.astro";
import TimelineItem from "../components/TimelineItem.astro";
import WorkCard from "../components/WorkCard.astro";

const stats = [
	{ value: "2021–2025", label: "Notre Dame" },
	{ value: "2024", label: "Navy Intern" },
	{ value: "2025", label: "Pro Volleyball" },
	{ value: "USA", label: "Based" },
];

const workItems = [
	{
		title: "Quipli · Onboarding Assistant",
		description:
			"Supported onboarding of rental companies, including account configuration, data entry, and product training.",
		chips: ["Onboarding", "Ops", "Support"],
	},
	{
		title: "NAVAL SURFACE WARFARE CENTER",
		description:
			"Automated CAMEO database workflows and built interactive maps using Python/networkx.",
		chips: ["Python", "Systems", "MBSE"],
	},
	{
		title: "Iowa Utilities Board",
		description:
			"Reviewed engineering dockets for multibillion‑dollar carbon pipeline and electrical projects.",
		chips: ["Safety", "Review", "Engineering"],
	},
];

const timelineItems = [
	{
		date: "Current",
		title: "ATSC Wildcats · Professional Volleyball",
		description: "Competing in the Austrian professional league.",
	},
	{
		date: "2021–2025",
		title: "University of Notre Dame · NCAA Division I Athlete",
		description:
			"Trained 20 hours/week, including skills, lifts, film study, and setter training.",
	},
	{
		date: "2021",
		title: "High School Achievements",
		description:
			"Iowa Gatorade POY, 5A State Champion, All‑Tournament MVP, USA Volleyball Open National Champion.",
	},
];

const skills = [
	{
		title: "Engineering",
		description:
			"Computer engineering background with systems, data, and tooling experience.",
	},
	{
		title: "Coaching",
		description:
			"Private coach and mentor; led camps, clinics, and training programs.",
	},
	{
		title: "Athletics",
		description:
			"NCAA Division I volleyball athlete and professional player.",
	},
];
---

<Layout>
	<main class="profile">
		<section class="hero">
			<div class="hero__copy">
				<p class="eyebrow">Athlete · Engineer · Coach</p>
				<h1>Phyona — building on‑court leadership and engineering impact.</h1>
				<p class="lede">
					NCAA Division I volleyball athlete and computer engineering student with
					experience across systems engineering, onboarding, and coaching.
				</p>
				<div class="cta">
					<a class="btn btn--primary" href="/engineering">Projects & Work</a>
					<a class="btn btn--ghost" href="/page2">Contact</a>
				</div>
			</div>
			<HeroCard
				statusLabel="Currently"
				availabilityLabel="Open to Opportunities"
				title="Competing, coaching, and building systems."
				stats={stats}
			/>
		</section>

		<section class="band">
			<div class="band__item">
				<h2>Snapshot</h2>
				<p>
					Computer engineering major and Division I athlete with experience in
					systems engineering, data mapping, and product onboarding.
				</p>
			</div>
			<div class="band__item">
				<h2>Focus</h2>
				<ul class="tags">
					<li>Systems Engineering</li>
					<li>Data Mapping</li>
					<li>Onboarding</li>
					<li>Coaching</li>
				</ul>
			</div>
			<div class="band__item">
				<h2>Toolbox</h2>
				<ul class="tags">
					<li>Python</li>
					<li>NetworkX</li>
					<li>Arduino</li>
					<li>GIS</li>
				</ul>
			</div>
		</section>

		<section class="section">
			<header class="section__head">
				<h2>Projects & Work Experience</h2>
				<a class="link" href="/engineering">View all</a>
			</header>
			<div class="grid">
				{workItems.map((item) => (
					<WorkCard {...item} />
				))}
			</div>
		</section>

		<section class="section">
			<header class="section__head">
				<h2>Athletics Experience</h2>
				<a class="link" href="/page3">Full timeline</a>
			</header>
			<div class="timeline">
				{timelineItems.map((item) => (
					<TimelineItem {...item} />
				))}
			</div>
		</section>

		<section class="section">
			<header class="section__head">
				<h2>Strengths</h2>
			</header>
			<div class="skill-grid">
				{skills.map((item) => (
					<SkillCard {...item} />
				))}
			</div>
		</section>

		<section class="cta-band">
			<div>
				<h2>Open to new opportunities in engineering and athletics.</h2>
				<p>Reach out for collaborations, internships, or coaching work.</p>
			</div>
			<a class="btn btn--primary" href="/page2">Get in touch</a>
		</section>
	</main>
</Layout>

<style>
	@import url("https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Space+Grotesk:wght@400;500;600&display=swap");

	:global(html) {
		background: #0f0f10;
	}

	:global(body) {
		margin: 0;
		color: #151515;
		background: radial-gradient(circle at 20% 10%, #ffe8d1 0%, #fff7f0 35%, #f3f6ff 70%, #ffffff 100%);
		font-family: "Space Grotesk", "Segoe UI", sans-serif;
	}

	:global(main) {
		min-height: 100vh;
	}

	.profile {
		max-width: 1100px;
		margin: 0 auto;
		padding: 32px 24px 96px;
		display: flex;
		flex-direction: column;
		gap: 64px;
	}

	.hero {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 32px;
		align-items: center;
	}

	.hero h1 {
		font-family: "DM Serif Display", "Georgia", serif;
		font-size: clamp(2.4rem, 4vw, 3.6rem);
		margin: 8px 0 16px;
	}

	.eyebrow {
		text-transform: uppercase;
		letter-spacing: 0.12em;
		font-size: 0.78rem;
		color: #6b7280;
	}

	.lede {
		font-size: 1.05rem;
		max-width: 46ch;
	}

	.cta {
		display: flex;
		gap: 16px;
		margin-top: 24px;
		flex-wrap: wrap;
	}

	.btn {
		padding: 12px 20px;
		border-radius: 999px;
		border: 1px solid #1d1d1f;
		text-decoration: none;
		font-weight: 600;
		color: #1d1d1f;
	}

	.btn--primary {
		background: #1d1d1f;
		color: #ffffff;
	}

	.btn--ghost {
		background: transparent;
	}

	.hero__card {
	}

	.band {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 24px;
		background: #ffffff;
		border-radius: 20px;
		padding: 28px;
		box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
	}

	.band h2 {
		margin-top: 0;
	}

	.tags {
		list-style: none;
		padding: 0;
		margin: 12px 0 0;
		display: flex;
		gap: 8px;
		flex-wrap: wrap;
	}

	.tags li {
		padding: 6px 12px;
		border-radius: 999px;
		background: #f2f4f8;
		font-size: 0.85rem;
	}

	.section__head {
		display: flex;
		align-items: baseline;
		justify-content: space-between;
		gap: 16px;
		margin-bottom: 20px;
	}

	.link {
		color: #1d1d1f;
		text-decoration: none;
		font-weight: 600;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 20px;
	}

	.timeline {
		display: grid;
		gap: 16px;
	}

	.skill-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 16px;
	}

	.cta-band {
		display: flex;
		justify-content: space-between;
		gap: 24px;
		align-items: center;
		background: #111318;
		color: #ffffff;
		padding: 28px;
		border-radius: 20px;
		flex-wrap: wrap;
	}

	@media (max-width: 720px) {
		.section__head {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
