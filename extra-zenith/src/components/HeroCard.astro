---
const {
	statusLabel = "Currently",
	availabilityLabel = "Available",
	title = "Building bold, simple interfaces.",
	stats = [],
} = Astro.props;
---

<div class="hero__card">
	<div class="card__top">
		<span class="pill">{statusLabel}</span>
		<span class="pill pill--accent">{availabilityLabel}</span>
	</div>
	<h3>{title}</h3>
	<ul class="stat-grid">
		{stats.map((stat) => (
			<li>
				<strong>{stat.value}</strong>
				<span>{stat.label}</span>
			</li>
		))}
	</ul>
</div>

<style>
	.hero__card {
		background: #111318;
		color: #f7f7f7;
		padding: 24px;
		border-radius: 20px;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
	}

	.card__top {
		display: flex;
		gap: 8px;
		margin-bottom: 12px;
	}

	.pill {
		display: inline-flex;
		align-items: center;
		padding: 4px 10px;
		border-radius: 999px;
		font-size: 0.75rem;
		background: rgba(255, 255, 255, 0.08);
	}

	.pill--accent {
		background: #ffb347;
		color: #111318;
		font-weight: 600;
	}

	.stat-grid {
		list-style: none;
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 12px;
		padding: 0;
		margin: 16px 0 0;
	}

	.stat-grid li strong {
		display: block;
		font-size: 1.2rem;
	}
</style>
