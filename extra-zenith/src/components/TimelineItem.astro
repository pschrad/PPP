---
const { date, title, description } = Astro.props;
---

<div class="timeline__item">
	<span class="timeline__date">{date}</span>
	<div>
		<h3>{title}</h3>
		<p>{description}</p>
	</div>
</div>

<style>
	.timeline__item {
		display: grid;
		grid-template-columns: 120px 1fr;
		gap: 16px;
		background: #ffffff;
		padding: 16px 20px;
		border-radius: 14px;
		box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
	}

	.timeline__date {
		font-weight: 600;
		color: #6b7280;
	}

	@media (max-width: 720px) {
		.timeline__item {
			grid-template-columns: 1fr;
		}
	}
</style>
